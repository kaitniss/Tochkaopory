    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Smooth scrolling functions
        function scrollToContact() {
            document.getElementById('contact').scrollIntoView({ behavior: 'smooth' });
        }

        function scrollToConsultation() {
            document.getElementById('consultation').scrollIntoView({ behavior: 'smooth' });
        }

        function scrollToEducation() {
            document.getElementById('education').scrollIntoView({ behavior: 'smooth' });
        }

        // Booking functions
        function openBookingModal(service) {
            alert(`Запись на ${service}. В реальной версии откроется детальная форма записи или переход в мессенджер для обсуждения деталей.`);
        }

        function bookSlot(slot) {
            alert(`Бронирование слота ${slot}. В реальной версии откроется форма подтверждения с выбором услуги и предоплатой.`);
        }

        function openCourseModal(course) {
            alert(`Подробная информация о курсе ${course}. В реальной версии откроется детальная страница программы с возможностью записи.`);
        }

        function reserveSpot(course) {
            alert(`Бронирование места на курс ${course}. В реальной версии откроется форма с возможностью внесения предоплаты.`);
        }

        // Form submissions
        function submitLeadForm(event, type) {
            event.preventDefault();
            alert(`Спасибо! ${type === 'checklist' ? 'Чек-лист' : 'Гид'} отправлен на ваш email.`);
            event.target.reset();
        }

        function submitContactForm(event) {
            event.preventDefault();
            alert('Сообщение отправлено. Свяжусь с вами в течение 24 часов.');
            event.target.reset();
        }

        // Smooth scrolling for all anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Close mobile menu when clicking on links
        document.querySelectorAll('#mobileMenu a').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('mobileMenu').classList.add('hidden');
            });
        });

        // Add scroll effect to header
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.classList.add('shadow-md');
            } else {
                header.classList.remove('shadow-md');
            }
        });
    </script>
